# Production Environment Variables
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Domain Configuration
DOMAIN=yourdomain.com

# Database Configuration
POSTGRES_DB=boleteria_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# Backend Security
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
PROJECT_NAME=Boleter√≠a API
DEBUG=False

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# SSL/TLS Configuration (set to 'true' after SSL is configured)
SSL_ENABLED=true
